---
import "../styles/global.css";
import { Font } from "astro:assets";
import { ClientRouter } from 'astro:transitions';
import LoadingIndicator from "astro-loading-indicator/component"

const { title, description } = Astro.props;

const defaultTitle = "Arina Chernova's FYI Website";
const defaultDescription = "Arina Chernova is Russia-born Singapore Citizen pursuing her higher education and career goals.";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
		<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
		<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
		<link rel="manifest" href="/site.webmanifest">
		<link rel="icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{title ?? defaultTitle}</title>
		<meta name="description" content={description ?? defaultDescription} />

		<meta property="og:url" content="https://arina.fyi/" />
		<meta property="og:type" content="website" />
		<meta property="og:title" content={defaultTitle} />
		<meta property="og:description" content={defaultDescription} />
		<meta property="og:image" content="/social-image.png" />

		<!-- Twitter Meta Tags -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta property="twitter:domain" content="arina.fyi" />
		<meta property="twitter:url" content="https://arina.fyi/" />
		<meta name="twitter:title" content={defaultTitle} />
		<meta name="twitter:description" content={defaultDescription} />
		<meta name="twitter:image" content="/social-image.png" />

		<Font cssVariable="--font-geist" preload />
		<ClientRouter />
		<LoadingIndicator color="#f4f4f5" height="2px" />

		<!-- Google tag (gtag.js) -->
		<script async src="https://www.googletagmanager.com/gtag/js?id=G-Z7SB1RJXE4"></script>
		<script>
			window.dataLayer = window.dataLayer || [];
			function gtag(){dataLayer.push(arguments);}
			gtag('js', new Date());

			gtag('config', 'G-Z7SB1RJXE4');
		</script>
	</head>
	<body class="font-sans min-h-screen bg-zinc-900">
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
